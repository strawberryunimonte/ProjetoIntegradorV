<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto_usuario"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/nome_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/foto_usuario" />

    <TextView
        android:id="@+id/email_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/foto_usuario"
        android:layout_below="@+id/nome_usuario"/>

    <View
        android:background="#5F9EA0"
        android:layout_width="match_parent"
        android:layout_below="@+id/foto_usuario"
        android:layout_height="0.5dp" />

    <TextView
        android:id="@+id/uid_user"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>