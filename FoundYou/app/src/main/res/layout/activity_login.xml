<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="40dp">



    <ImageView
        android:id="@+id/logo_foundyou"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        android:src="@drawable/logo_foundyou_login"
        />

    <EditText
        android:id="@+id/edtNomeLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/nome"
        android:layout_below="@+id/logo_foundyou"
        android:theme="@style/EditTextPersonalizado"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/edtSenhaLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNomeLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="@string/senha"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:theme="@style/EditTextPersonalizado"
        />

    <Button
        android:id="@+id/btnLogarLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSenhaLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/verde"
        android:text="@string/logar"
        android:textColor="@color/branco" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogarLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/verde"
        android:text="@string/cadastrar"
        android:textColor="@color/branco" />


    <TextView
        android:id="@+id/txtEsqueciSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCadastrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/esqueci_minha_senha"
        android:textColor="@color/verde" />

    <TextView
        android:id="@+id/txtStrawberry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/strawberry"
        android:textColor="@color/verde" />


</RelativeLayout>
